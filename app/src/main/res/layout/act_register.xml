<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/act_register_txt_cabecera"
        style="@style/cabecera"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/act_register_txt_cabecera" />

    <ImageView
        android:id="@+id/act_register_imagen"
        android:layout_width="124dp"
        android:layout_height="122dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_usuario" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_register_txt_cabecera">

        <EditText
            android:id="@+id/act_register_txt_nombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="6dp"
            android:background="@drawable/fondo_input"
            android:drawableStart="@drawable/custom_usuario_icono"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Nombre"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/act_register_txt_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/fondo_input"
            android:drawableStart="@drawable/custom_correo_icono"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/act_register_txt_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="6dp"
            android:background="@drawable/fondo_input"
            android:drawableStart="@drawable/custon_contrasena_icono"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/act_register_txt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/fondo_input"
            android:drawableStart="@drawable/custon_contrasena_icono"
            android:drawablePadding="6dp"
            android:ems="10"
            android:hint="Repita la contraseña"
            android:inputType="textPassword"
            android:paddingHorizontal="12dp" />

        <CheckBox
            android:id="@+id/act_register_cbox_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/act_login_btn_recordar_pass"
            android:textSize="16sp" />

        <Button
            android:id="@+id/act_register_btn_registrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/naranja"
            android:background="@drawable/fondo_input"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:layout_marginVertical="12dp"
            android:text="@string/act_register_btn_register"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>