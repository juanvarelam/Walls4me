<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/base"
    android:layout_height="match_parent"
    tools:context=".Auth.RegisterActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_app" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="424dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <EditText
            android:id="@+id/act_register_txt_nombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="6dp"
            android:background="@drawable/fondo_input"
            android:drawableStart="@drawable/custom_usuario_icono"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/act_register_hint_nombre"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/act_register_txt_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/fondo_input"
            android:drawableStart="@drawable/custom_correo_icono"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/act_register_hint_email"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/act_register_txt_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="6dp"
            android:background="@drawable/fondo_input"
            android:drawableStart="@drawable/custon_contrasena_icono"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/act_register_hint_password"
            android:inputType="textPassword"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/act_register_txt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/fondo_input"
            android:drawableStart="@drawable/custon_contrasena_icono"
            android:drawablePadding="6dp"
            android:ems="10"
            android:hint="@string/act_register_hint_confirm_password"
            android:inputType="textPassword"
            android:paddingHorizontal="12dp" />

        <CheckBox
            android:id="@+id/act_register_cbox_mostrar_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/act_login_mostrar_password" />


        <Button
            android:id="@+id/act_register_btn_registrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/fondo_input"
            android:backgroundTint="@color/botones"
            android:paddingHorizontal="32dp"
            android:layout_gravity="center"
            android:paddingVertical="8dp"
            android:text="@string/act_register_btn_register"
            android:textSize="20sp" />

        <Button
            android:id="@+id/act_register_btn_login"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:background="@android:color/transparent"
            android:text="@string/act_register_txt_ir_a_login"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>