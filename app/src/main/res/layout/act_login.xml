<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_app" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="104dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="28dp"
        android:paddingTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <EditText
            android:id="@+id/act_login_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/fondo_input"
            android:drawableStart="@drawable/custom_correo_icono"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/act_login_hint_email"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/act_login_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/fondo_input"
            android:drawableStart="@drawable/custon_contrasena_icono"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/act_login_hint_password"
            android:inputType="textPassword"
            android:paddingHorizontal="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/act_login_cbox_mostrar_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:layout_weight="34"
                android:textColor="@color/black"
                android:buttonTint="@color/white"
                tools:text="@string/act_login_mostrar_password" />

            <Button
                android:id="@+id/act_login_btn_recordar_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="66"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:text="@string/act_login_btn_recordar_password"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/act_login_btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/fondo_input"
            android:backgroundTint="@color/botones"
            android:paddingHorizontal="32dp"
            android:paddingVertical="8dp"
            android:text="@string/act_login_btn_login"
            android:textSize="20sp" />

        <Button
            android:id="@+id/act_login_btn_registrarse"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginVertical="12dp"
            android:background="@android:color/transparent"
            android:text="@string/act_login_txt_ir_a_registrarse"
            android:textSize="16sp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>