<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/act_login_txt_cabecera"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        style="@style/cabecera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/act_login_txt_cabecera" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="28dp"
        android:paddingTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/act_login_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/fondo_input"
            android:drawableStart="@drawable/custom_correo_icono"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/act_login_hint_email"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/act_login_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/fondo_input"
            android:drawableStart="@drawable/custon_contrasena_icono"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/act_login_hint_password"
            android:inputType="textPassword"
            android:paddingHorizontal="12dp" />

        <CheckBox
            android:id="@+id/act_login_cbox_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="@string/act_login_btn_recordar_pass"
            android:textSize="16sp" />

        <Button
            android:id="@+id/act_login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/naranja"
            android:paddingHorizontal="8dp"
            android:background="@drawable/fondo_input"
            android:paddingVertical="8dp"
            android:text="@string/act_login_btn_login"
            android:textSize="20sp" />

        <Button
            android:id="@+id/act_login_btn_registrarse"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginVertical="12dp"
            android:background="@android:color/transparent"
            android:text="@string/act_login_txt_ir_a_registrarse" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>