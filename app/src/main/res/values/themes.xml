<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Walls4me" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style  name="cabecera" parent="Theme.Walls4me">
        <item name="android:background">@color/naranja</item>
        <item name="android:autoSizeMinTextSize">26sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BottomNavigation">
        <item name="itemTextAppearanceActive">@color/white</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="backgroundTint">@color/naranja</item>
    </style>

</resources>